                script.
                    $(document).ready(function(){
                      $('[name="year"]').mask('0000');
                      $('[name="engine"]').mask('0.0');
                      $('[name="body"]').on('change paste keyup', function(el) {
                        var val = $(this).val();
                        val = val.replace(/[^a-zA-Z]/g, '');
                        $(this).val(val.slice(0, 32));
                      })
                      $('[name="model"]').on('change paste keyup', function(el) {
                        var val = $(this).val();
                        val = val.replace(/[^a-zA-Z0-9]/g, '');
                        $(this).val(val.slice(0, 32));
                      })
                      $('[name="mileage"]').on('change paste keyup', function(el) {
                        var val = $(this).val();
                        val = val.replace(/[^0-9]/g, '');
                        $(this).val(val);
                      })
                      $('[name="price"]').on('change paste keyup', function(el) {
                        var val = $(this).val();
                        val = val.replace(/[^0-9]/g, '');
                        $(this).val(val);
                      })
                    });
